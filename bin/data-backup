#!/usr/bin/env bash

set -ex

date=$(date '+%Y-%m-%d')
backup_dir="${HOME}/backups"

function things () {
  path="$HOME/Library/Group Containers/JLMPQHK86H.com.culturedcode.ThingsMac/ThingsData-EV52M"
  file="Things Database.thingsdatabase"

  target="${backup_dir}/Things/"
  target_file="ThingsDatabase-${date}.thingsdatabase"

  mkdir -p "${target}"
  cp -r "${path}/${file}" "${target}/${target_file}"
}

function obsidian () {
  path="$HOME/Library/Mobile Documents/iCloud~md~obsidian/Documents/Notes"
  target="${backup_dir}/Obsidian/Notes-${date}"

  mkdir -p "${target}"
  cp -r "${path}" "${target}"
}

function bitwarden () {
  target="${backup_dir}/Passwords"

  mkdir -p "${target}"
  bw export --output "${target}/bitwarden_encrypted_export_${date}.json" --format=encrypted_json --password \
    --session=$(cat "${HOME}/.secret/bw-session")
}

function passwords () {
  if [ ! -f Passwords.csv ]; then
    echo "Export from the Passwords app before continuing."
    exit 1
  fi

  mv Passwords.csv "Passwords-${date}.csv"
  file-encrypt "Passwords-${date}.csv"

  rm "Passwords-${date}.csv"
}

function all() {
  things
  passwords

  # Inactive
  #
  # bitwarden
  # obsidian
}

TARGET=${@:-all}

for target in ${TARGET}; do
  echo "Running ${target}..."
  ${target}
  echo "${target} complete."
done
