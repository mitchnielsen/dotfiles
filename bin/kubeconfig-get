#!/usr/bin/env bash
set -e

printf "name of cluster (i.e.: customer-managed-dev-genomics):\n"
read -r cluster_name

project_name=$(printf "prefect-dev-customer-managed\nprefect-dev-cloud2\nprefect-stg-cloud2\nprefect-prd-cloud2" | fzf --header='GCP project name')

KUBECONFIG="${HOME}/.kube/contexts/${cluster_name}" gcloud container clusters get-credentials \
  "${cluster_name}" \
  --region us-east1 \
  --project "${project_name}"
