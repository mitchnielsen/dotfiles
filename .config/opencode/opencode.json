{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "edit": "ask",
    "bash": {
      "terraform *": "ask",
      "rm *": "ask",
      "git *": "ask",
      "*": "allow"
    }
  },
  "mcp": {
    "mcp-router": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@mcp_router/cli@latest",
        "connect"
      ],
      "environment": {}
    }
  }
}
