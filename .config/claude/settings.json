{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "USE_BUILTIN_RIPGREP": "0"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Edit(*)",
      "Glob(*)",
      "Grep(*)",
      "LS(*)",
      "MultiEdit(*)",
      "Read(*)",
      "Task(*)",
      "TodoWrite(*)",
      "WebFetch",
      "WebSearch",
      "Write(*)",
      "mcp__linear-server__create_issue",
      "mcp__linear-server__get_issue",
      "mcp__linear-server__get_user",
      "mcp__linear-server__get_team",
      "mcp__linear-server__list_cycles",
      "mcp__linear-server__list_issue_labels",
      "mcp__linear-server__list_issue_statuses",
      "mcp__linear-server__list_teams",
      "mcp__linear__list_my_issues",
      "mcp__prometheus__execute_query",
      "mcp__prometheus__execute_range_query",
      "mcp__prometheus__list_metrics",
      "mcp__prometheus__get_metric_metadata"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(git push:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "statusLine": {
    "type": "command",
    "command": "bash ~/.config/claude/statusline-command.sh"
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": false,
  "feedbackSurveyState": {
    "lastShownTime": 1754598531219
  }
}
