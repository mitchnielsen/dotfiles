{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "USE_BUILTIN_RIPGREP": "0"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Edit(*)",
      "Glob(*)",
      "Grep(*)",
      "LS(*)",
      "MultiEdit(*)",
      "Read(*)",
      "Task(*)",
      "TodoWrite(*)",
      "WebFetch",
      "WebSearch",
      "Write(*)",
      "mcp__linear__*",
      "mcp__prefect-docs__*",
      "mcp__prometheus__*"
    ],
    "ask": [
      "Bash(rm:*)",
      "Bash(git push:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "statusLine": {
    "type": "command",
    "command": "bash ~/.config/claude/statusline-command.sh"
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": false,
  "feedbackSurveyState": {
    "lastShownTime": 1754598531219
  }
}
